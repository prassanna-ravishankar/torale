# Copy to .env and add your keys
# Required variables are marked with [REQUIRED]

# Database (local default works for docker-compose)
DATABASE_URL=postgresql://torale:torale@localhost:5432/torale

# Agent service URLs (dual-tier for paid fallback)
# Docker Compose defaults work automatically
AGENT_URL_FREE=http://agent-free:8000
AGENT_URL_PAID=http://agent-paid:8000
# Keep AGENT_URL for backward compatibility
AGENT_URL=http://agent-free:8000

# Security [REQUIRED]
# Generate with: openssl rand -hex 32
SECRET_KEY=

# Clerk Authentication [REQUIRED] - Get keys from https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
# Frontend needs this too (Vite reads VITE_ prefixed vars)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_...
VITE_API_BASE_URL=http://localhost:8000

# AI API Keys
# GEMINI_API_KEY_FREE is REQUIRED - free tier (20/day limit)
GEMINI_API_KEY_FREE=
# GEMINI_API_KEY_PAID is REQUIRED - paid tier (fallback for 429 errors)
GEMINI_API_KEY_PAID=
# Keep GEMINI_API_KEY for backward compatibility (falls back to free if not set)
GEMINI_API_KEY=
# PERPLEXITY_API_KEY is REQUIRED - agent uses Perplexity for search
PERPLEXITY_API_KEY=
# MEM0_API_KEY is REQUIRED - agent uses Mem0 for cross-run memory
MEM0_API_KEY=
# Optional
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Novu Cloud Notifications (optional)
# Get API key from https://novu.co dashboard
NOVU_SECRET_KEY=
# Workflow IDs (must match workflows created in Novu dashboard)
NOVU_WORKFLOW_ID=torale-condition-met
NOVU_VERIFICATION_WORKFLOW_ID=torale-email-verification
NOVU_WELCOME_WORKFLOW_ID=torale-task-welcome
# API URL (defaults to EU region, use https://api.novu.co for US)
NOVU_API_URL=https://eu.api.novu.co

# GCP Deployment (only needed for production GKE deployment)
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Development Mode (optional)
# Set to 1 to disable authentication in local development
TORALE_NOAUTH=
VITE_TORALE_NOAUTH=
# Email to use for test user in no-auth mode (defaults to test@example.com)
TORALE_NOAUTH_EMAIL=test@example.com

# Platform capacity (optional - for waitlist testing)
MAX_USERS=

# PostHog Analytics (optional - for user behavior tracking and error analytics)
# Get API key from https://posthog.com dashboard
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com
POSTHOG_ENABLED=true
# Frontend needs this too (Vite reads VITE_ prefixed vars)
VITE_POSTHOG_API_KEY=
VITE_POSTHOG_HOST=https://app.posthog.com

# Logfire
#
LOGFIRE_TOKEN=
