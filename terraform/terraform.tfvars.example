# GCP Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# GitHub Configuration (for Cloud Build)
github_owner = "your-github-username"
github_repo  = "torale"

# Supabase Configuration
supabase_url      = "https://your-project.supabase.co"
supabase_anon_key = "your-supabase-anon-key"
database_url      = "postgresql://postgres.your-project:password@aws-0-region.pooler.supabase.com:5432/postgres"

# API Keys
notificationapi_client_id     = "your-notificationapi-client-id"
notificationapi_client_secret = "your-notificationapi-client-secret"
perplexity_api_key           = "your-perplexity-api-key"
openai_api_key               = "your-openai-api-key"

# Optional: Custom domain for frontend
# frontend_domain = "torale.ai"        # For apex domain
# frontend_domain = "app.torale.ai"   # For subdomain

# Optional: Scaling configuration
# min_instances = 0
# max_instances = 100