{
  "mcpServers": {
    "datetime": {
      "command": "uvx",
      "args": ["mcp-datetime"]
    },
    "mem0": {
      "command": "uvx",
      "args": ["mem0-mcp-server"],
      "env": {
        "MEM0_DEFAULT_USER_ID": "local-debug"
      }
    },
    "perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"]
    }
  }
}
